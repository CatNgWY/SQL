CREATE table duets (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    person1_id INTEGER,
    person2_id INTEGER,
    song TEXT);

INSERT INTO duets (person1_id, person2_id, song)
    VALUES (2, 5, "Falling Into the Sea of Love");
